<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground">
    <!--    The last line is added to add the ripple effect on click-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_01" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_by"
                style="@style/Header2"
                android:text="Author: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_01"
                android:layout_alignBaseline="@+id/tv_author" />

            <TextView
                android:id="@+id/tv_author"
                style="@style/Header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_01"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/tv_by"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_date"
            android:text="2 weeks ago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/text_01" />

        <TextView
            android:id="@+id/tv_body"
            style="@style/Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_02" />

    </LinearLayout>

</androidx.cardview.widget.CardView>